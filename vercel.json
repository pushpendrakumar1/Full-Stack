{ 

"version": 2,
"builds": [
    {
        "src": "poll?wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLamdaSize": "15mb", "runtime": "python3.10.11"}
    },
    {
        "src":"build_files.sh",
        "use": "@vercel?static-build",
        "config": {
            "distDir": "staticfiles-build"
        }
    }
    ],
 "routes": [
     {
        "src": "/static/(.*)",
        "desi": "/static/$1"
     },
     {
        "src": "/(.*)",
        "desi": "poll/wsgi.py"
     }    
]
}